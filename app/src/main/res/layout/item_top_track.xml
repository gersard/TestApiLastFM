<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="15dp">

    <TextView
        android:id="@+id/txt_nombre_track"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/textColorPrimary"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_cancion_logo"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="25dp">

        <TextView
            android:id="@+id/txt_playcount_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_playcount"
            android:drawableStart="@drawable/ic_playcount"
            android:textSize="14sp"
            android:layout_marginRight="4dp"
            android:layout_marginEnd="4dp"
            />

        <TextView
            android:id="@+id/txt_listeners_track"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_listeners"
            android:drawableStart="@drawable/ic_listeners"
            android:textSize="14sp"
            />

    </LinearLayout>



</LinearLayout>