<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/img_artist_info"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:scaleType="centerCrop"
        android:src="@drawable/artist_placeholder"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/img_artist_info"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/txt_nombre_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/txt_playcount_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_playcount"
            android:drawableStart="@drawable/ic_playcount"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_listeners_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_listeners"
            android:drawableStart="@drawable/ic_listeners"
            android:layout_marginLeft="12dp"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_tag_artista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textColorPrimary"
            android:layout_marginLeft="12dp"
            android:textSize="17sp"
            android:gravity="center_horizontal" />

    </LinearLayout>


    <TextView
        android:id="@+id/txt_artist_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_artist_info"
        android:layout_marginTop="15dp"
        android:textColor="@color/textColorPrimary"
        android:gravity="center_vertical"
        android:text=""
        android:textSize="15sp"/>


</RelativeLayout>